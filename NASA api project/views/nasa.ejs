<%- include('includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
</head>

<body>
<script src="/javascripts/client.js"></script>
<div class="container">
    <div class="row">
        <div class="col">
            <div class="p-2 mb-3 bg-light rounded-3">
                <div class="container-fluid py-2">
                    <h1 class="display-5 fw-bold text-center">
                        API NASA
                    </h1>
                    <div class="text-center">
                        <img src="/assets/nasa.jpg" alt="nasa" width="75" height="75">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="email">
    <%=email%>
</div>
<div id="userName">
    <%=name%>
</div>
<div class="container">
    <div id="registered as">
        <div class="row">
            <div class="col-4">
                <h3>Registered as: <strong><%= name %></strong></h3>
            </div>
            <div class="col-4">
                <form action="/logout" method="GET">
                    <button type="submit" id="logout-button" class="btn btn-success">Logout</button>
                </form>
            </div>
        </div>
    </div>
    <div id="pick_date">
        <div class="row">
            <div class="col-4">
                <label for="start_datel"><strong>Pick a date:</strong></label>
                <br>
                <input type="date" id="start_date" name="trip-start" required="required">
                &nbsp;
                <button type="button" id="button-date" class="btn btn-primary">Ok</button>
            </div>
            <br>
        </div>
    </div>
    <div id="data">

    </div>
    <div id="spinner" class="d-none">
        <div class="spinner-border" role="status">
            <span class="sr-only"></span>
        </div>
    </div>
    <br>
    <div id="table_pictures">

    </div>
    <div id="spinner_2" class="d-none">
        <div class="spinner-border" role="status">
            <span class="sr-only"></span>
        </div>
    </div>
    <div id="button more">

    </div>
    <br><br>
</div>
<%- include('includes/end.ejs') %>